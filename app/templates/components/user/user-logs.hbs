{{#if canViewLog}}
    <div class="panel panel-default log">
        <div class="panel-heading">
            {{t 'User\'s log'}}
        </div>
        <div class="panel-body">
            {{#unless logs}}
                <p class="alert alert-info">
                    {{t 'There are no logs'}}
                </p>
            {{else}}
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    {{t 'Date'}}
                                </th>
                                <th>
                                    {{t 'Password\'s title'}}
                                </th>
                                <th>
                                    {{t 'Action'}}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each logs as |log|}}
                                <tr>
                                    <td class="grid-150">
                                        {{log.action_date}}
                                    </td>
                                    <td>
                                        {{log.password_title}}
                                    </td>
                                    <td>
                                        {{log.action}}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{/unless}}
        </div>
        {{#if logs}}
            {{log-paginator page=page 
                pageCount=pageCount 
                changePage = (action 'submit') 
            }}
        {{/if}}
    </div>
{{/if}}
{{yield}}