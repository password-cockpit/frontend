<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <img class="logo-login" src="/assets/images/logo.svg" alt="login">
            <div class="login-panel panel panel-default">
                <div class="panel-body">
                    <form id="loginForm" class="form-horizontal" name="login" {{action 'authenticate' on='submit'}}>
                        {{form/form-text
                            type="text"
                            viewId="username"
                            name="username" 
                            placeholder=(t 'Username')
                            value=username 
                            isFormValid=isFormValid
                            showMessage=showMessage
                            validator=(validation-parameters
                                            required=true
                                            minLength=2
                                        )
                        }}
                        {{form/form-text
                            type="password"
                            viewId="password"
                            name="password" 
                            placeholder=(t 'Password') 
                            value=password 
                            isFormValid=isFormValid
                            showMessage=showMessage
                            validator=(validation-parameters
                                            required=true
                                            minLength=8
                                        )
                        }}
                        <div class="form-group ">
                            <div class=" col-sm-12">
                                <button type="submit" name="save" class="btn btn-lg btn-primary btn-block" value="">
                                    Login
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{outlet}}

